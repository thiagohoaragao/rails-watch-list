<div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path("banner.jpeg") %>)">
  <div class="container">
    <h1>Save movies</h1>
  </div>
</div>

<div class="container mt-4 text-end">
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
</div>
<div class="container">
  <h1 class='text-center mb-4'>Watch List</h1>
  <div class="cards">
      <% @lists.each do |list| %>
        <%= link_to list_path(list), class:'text-decoration-none' do %>
         <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=  cl_image_path list.photo.key %>)"
          <p><%= list.name %></p>
        </div>
        <% end %>
      <% end %>
  </div>
</div>


